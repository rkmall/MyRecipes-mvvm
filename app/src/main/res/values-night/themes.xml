<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="backgroundColor">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/darkGray</item>
        <item name="actionModeBackground">@color/colorActionBarActionMode</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:iconTint">@color/lightGray</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/dark_chip_background_color</item>
        <item name="android:textColor">@color/dark_chip_text_color</item>
        <item name="checkedIconTint">@color/dark_chip_text_color</item>
    </style>


    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>a
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabSelectedTextAppearance">@style/CustomTabTextStyle</item>
    </style>


    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cousine</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>