<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/lightPrimaryDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="cardBackgroundColor">@color/lightPrimary</item>
        <item name="actionModeBackground">@color/lightGray</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="strokeColor">@color/lightMediumGray</item>
        <item name="android:iconTint">@color/darkGray</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="DetailsFragmentStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>a
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabTextAppearance">@style/CustomTabTextStyle</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabSelectedTextAppearance">@style/CustomTabTextStyle</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cousine</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>